#Output
outputfile = ./

#Evolution
expansion = true
evolver = VV2

#Latticels

N = 32
dt = 0.05
kIR = 0.75

#Times
tOutputFreq = 20
tOutputInfreq = 20
tOutputRareFreq = 50
tMax = 500
energy_snapshot = E_S_K
hdf5Spectra = true


#Spectra options
PS_type = 1
PS_version = 1

#GWs
GWprojectorType = 1
withGWs = false

#IC
kCutOff = 4
initial_amplitudes = 5.6964e18 0  # homogeneous amplitudes in GeV
initial_momenta = 6e23 0   # homogeneous amplitudes in GeV2

#Model Parameters
lambda = 1e9
q = 1e14
